{% extends 'layout.twig' %}

{% block content %}

	{% embed "header.twig" %}
	{% endembed %}

	<div class="content wide">

	{% if images|length > 0 %}

		<p>Found {{ images|length }} result{% if images|length != 1 %}s{% endif %} for "{{ q }}"</p>


			{% set vars = {'origin': 'search'} %}
			{% embed "images.twig" with vars %}
			{% endembed %}


	{% else %}
		<p>
			No results found for "{{ q }}".

			{% if index_count == 0 %}
				Check if cron is enabled.
			{% else %}
				Check your search query.
			{% endif %}

		</p>

	{% endif %}

	</div>

{% endblock %}
